<div class="container">
  <h2>Cosmetics Reviews</h2>
  
    <%= form_with model: @cosmetic,url: '/cosmetics', method: :post do |f| %>
    
    <h4 class="form-group row" id="star">評価</h4>
      <%= f.hidden_field :star, id: :review_star %>
　　
    <script>
      //$('#star').empty();
  
    var elem = document.getElementById('star');
    var opt = {  
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    half: false,
    scoreName: 'cosmetic[star]',
  };
  raty(elem,opt);
    </script>
        
    <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        
    <h4>コメント</h4>
        <%= f.text_area :text %>
        
        
        <%= f.submit 'レビューする', class: "btn btn-success" %>
        
    <% end %>

</div>