<div class="container">
  <div class="row">
    <h2 class="table-active">Cosmetics Reviews</h2>
  </div>
  
    <%= form_with model: @cosmetic,url: '/cosmetics', method: :post do |f| %>
    
    <table class="table table-borderless">
      <tr>
        <th>評価</th>
        <td id="star"><%= f.hidden_field :star, id: :review_star %></td>
      </tr>
　  　
    <script>
    $('#star').empty();
    var elem = document.getElementById('star');
    var opt = {  
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    half: false,
    scoreName: 'cosmetic[star]',
    };
    raty(elem,opt);
    </script>
      
    <tr>
      <th>画像(ヘアor商品)</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>  
      
    <tr>
      <th>内容</th>
      <td><%= f.text_area :text %></td>
    </tr>    
    </table>    
        <%= f.submit 'レビューする', class: "btn btn-success" %>
        
    <% end %>

</div>