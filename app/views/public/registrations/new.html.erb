<div class="container">
  <div class="row">
    <h2 class="table-active">NEW Member</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<table class="table table-borderless">
  <%= render "public/shared/error_messages", resource: resource %>

  <tr>
    <th><%= f.label :ニックネーム %></th>
    <td><%= f.text_field :name %></td>
  </tr>
  
  <tr>
    <th><%= f.label :メールアドレス %></th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>

  <tr>
    <th><%= f.label :性別 %></th>
    <td><%= f.text_field :sex %></td>
  </tr>
  
  <tr>
    <th><%= f.label :生年月日 %></th>
    <td><%= f.text_field :birthday %></td>
  </tr>
  
  <tr>
    <th><%= f.label :パスワード %></th>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <th><%= f.label :パスワード確認 %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <th></th>
    <td><%= f.submit "新規登録", class: "btn btn-md btn-success col-4 " %></td>
  </tr><br />
  
</table>
<% end %>

<div class="row">
  既に登録済みの方
</div>

<div><%= link_to "こちら",  new_customer_session_path %>からログインして下さい。</div>

</div>

